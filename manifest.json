{
    "name": "GyazzExec",
    "short_name": "GyazzExec",
    "version": "0.0.17",
    "manifest_version": 2,
    "description": "Gyazzのコード実行",

    "applications": {
	"gecko": {
	    "id": "gyazzexec@pitecan.com",
	    "strict_min_version": "45.0"
	}
    },

    "browser_action": {
	"default_icon": "icons/gyazzslide-19.png"
    },
    
    "icons": {
	"48": "icons/gyazzslide-48.png",
	"96": "icons/gyazzslide-96.png"
    },

    "background": {
	"scripts": ["exec_bg.js"]
    },

    "content_scripts": [
	{
	    "matches": ["https://gyazz-clone.herokuapp.com/*"],
	    "js": ["exec.js", "jquery-2.1.4.min.js"],
	    "run_at": "document_idle"
	}
    ]
}

